<div class="page-header">
  <h1>
    Application Decisions

    <a href="/applications/new" class="btn btn-lg btn-success">Add Application Decision</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>School</th>

        <th>Accepted?</th>

        <th>Submission year</th>

        <th>Actions</th>
      </tr>

      <% @applications.each do |application| %>
      <tr>

        <td><%= application.school.name %></td>

        <td><%= Application::DISPLAY_HELP[application.outcome.to_s] %></td>

        <td><%= application.submission_year %></td>

        <td>

          <a href="/applications/<%= application.id %>" class="btn btn-primary">Show</a>
          <a href="/applications/<%= application.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_application/<%= application.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
