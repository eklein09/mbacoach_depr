<!-- Validation failure messages -->
<% if @user.errors.any? %>
<% @user.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Edit My Stats</h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/update_user/<%= @user.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for name -->

      <div class="form-group">
<!--         <label for="name" class="control-label">
          Name
        </label> -->


        <input type="hidden" id="email" name="email" placeholder="Name" class="form-control" value="<%= @user.email %>">

      </div>

      <!-- Label and input for gmat -->

      <div class="form-group">
        <label for="gmat" class="control-label">
          GMAT
        </label>


        <input type="number" id="gmat" name="gmat" placeholder="GMAT" class="form-control" value="<%= @user.gmat %>">

      </div>

      <!-- Label and input for GPA -->

      <div class="form-group">
        <label for="gpa" class="control-label">
          GPA
        </label>
        <p>
          <%= number_field_tag 'gpa', nil, step: 'any' %>
        </p>
        <!-- <input type="number" id="gpa" name="gpa" placeholder="GPA" class="form-control" value="<%= @user.gpa %>">
      -->
    </div>

    <!-- Label and input for college rank -->

    <div class="form-group">
      <label for="collegerank" class="control-label">
        Rank of Undergrad Institution (US News or equivalent)
      </label>


      <input type="number" id="collegerank" name="collegerank" placeholder="Rank of College" class="form-control" value="<%= @user.collegerank %>">

    </div>



    <!-- Label and input for major -->

    <div class="form-group">
      <label for="name" class="control-label">
        Major
      </label>


      <% if @user.major.nil? then %>
      <p>
        <%= select_tag(:major, options_for_select([['Business','Business'],['Economics','Economics'],['Engineering','Engineering'],['Liberal Arts/Sciences','Liberal Arts/Sciences'],['Other','Other'],['Physical Sciences','Physical Sciences']])) %>
      </p>
      <% else %>
      <p>
        <%= select_tag(:major, options_for_select([['Business','Business'],['Economics','Economics'],['Engineering','Engineering'],['Liberal Arts/Sciences','Liberal Arts/Sciences'],['Other','Other'],['Physical Sciences','Physical Sciences']],@user.major)) %>
      </p>
      <% end %>

    </div>

    <!-- Label and input for pre-MBA industry -->

    <div class="form-group">
      <label for="industry" class="control-label">
        Pre-MBA Industry
      </label>


      <% if @user.industry.nil? then %>
      <p>
        <%= select_tag(:industry, options_for_select([['Commercial/Investment Banking','Commercial/Investment Banking'],['Computing/Telecom','Computing/Telecom'],['Consulting','Consulting'],['Consumer Products','Consumer Products'],['Education/Government/Nonprofit','Education/Government/Nonprofit'],['Energy','Energy'],['Engineering','Engineering'],['Financial Services -- Other','Financial Services -- Other'],['Investment Management','Investment Management'],['Military','Military'],['Nonprofit','Nonprofit'],['Other','Other'],['Real Estate','Real Estate'],['Venture Capital/Private Equity','Venture Capital/Private Equity']])) %>
      </p>
      <% else %>
      <p>
        <%= select_tag(:industry, options_for_select([['Commercial/Investment Banking','Commercial/Investment Banking'],['Computing/Telecom','Computing/Telecom'],['Consulting','Consulting'],['Consumer Products','Consumer Products'],['Education/Government/Nonprofit','Education/Government/Nonprofit'],['Energy','Energy'],['Engineering','Engineering'],['Financial Services -- Other','Financial Services -- Other'],['Investment Management','Investment Management'],['Military','Military'],['Nonprofit','Nonprofit'],['Other','Other'],['Real Estate','Real Estate'],['Venture Capital/Private Equity','Venture Capital/Private Equity']],@user.industry)) %>
      </p>
      <% end %>

    </div>

    <!-- Label and input for timeinservice -->

    <div class="form-group">
      <label for="name" class="control-label">
        Time in Service (years)
      </label>


      <input type="number" id="timeinservice" name="timeinservice" placeholder="Time in Service" class="form-control" value="<%= @user.timeinservice %>">

    </div>

    <!-- Label and input for prohelp -->

    <div class="form-group">
      <label for="prohelp" class="control-label">
        Did you use professional help (i.e. paid consulting service)?
      </label>

      <% if @user.prohelp.nil? then %>
      <p>
        <%= select_tag(:prohelp, options_for_select([['Yes, I did',true],['No, I did not',false]])) %>
      </p>
      <% else %>
      <p>
        <%= select_tag(:prohelp, options_for_select([['Yes, I did',true],['No, I did not',false]], @user.prohelp)) %>
      </p>
      <% end %>
    </div>

    <button class="btn btn-warning">
      Update User
    </button>
    or

    <a href="/users/<%= @user.id %>">Cancel</a>


  </form>

</div>
</div>
